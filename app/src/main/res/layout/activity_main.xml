<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/second"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/place_your_order"
                android:id="@+id/place_your_order"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="32sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:layout_above="@id/spinnerItem"
                app:layout_constraintTop_toBottomOf="@id/place_your_order"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:id="@+id/item"
                android:textSize="25sp"/>


            <Spinner
                android:id="@+id/spinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/worth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worth"
                app:layout_constraintTop_toBottomOf="@id/spinnerItem"
                android:layout_marginTop="10dp"
                android:layout_above="@id/spinnerWorth"
                android:id="@+id/worth"
                android:textSize="25sp"/>


            <Spinner
                android:id="@+id/spinnerWorth"
                android:layout_width="match_parent"
                android:layout_above="@id/add"
                app:layout_constraintTop_toBottomOf="@id/worth"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:id="@+id/add"
                android:layout_above="@id/order_recycler_view"
                android:layout_marginTop="20dp"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/order_recycler_view"
                android:layout_above="@id/cancel" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/orders"-->
<!--            android:tooltipText="Orders,"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            app:layout_constraintBottom_toTopOf="@id/done"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            android:textSize="20sp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:text="@string/done"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RelativeOverlap" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:id="@+id/cancel"
                android:text="@string/cancel"
                android:padding="15dp" />

        </LinearLayout>

    </RelativeLayout>
